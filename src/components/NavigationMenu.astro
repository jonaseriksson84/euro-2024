---
import { ModeToggle } from './ModeToggle'
import { AccountDropdown } from './AccountDropdown'
const user = Astro.locals.user
---

<div class="flex items-center justify-center px-8 border-b min-h-12">
  <div class="flex items-center w-[1200px]">
    <div class="flex gap-5 mr-20">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-trophy text-primary"
      >
        <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path>
        <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path>
        <path d="M4 22h16"></path>
        <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"
        ></path>
        <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"
        ></path>
        <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path>
      </svg>
      <h1 class="text-xl font-extrabold text-primary">EURO 2024</h1>
    </div>
    <div class="flex items-baseline h-full gap-4 text-sm">
      <a href="/countries" class="hover:underline">Countries</a>
      <a href="/fixtures" class="hover:underline">Fixtures</a>
      <a href="/predictions" class="hover:underline">Predictions</a>
    </div>
    <div class="flex items-center gap-5 ml-auto">
      {user && <AccountDropdown client:idle />}
      <ModeToggle client:idle />
    </div>
  </div>
</div>
