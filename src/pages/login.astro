---
import { Button } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import Username from '@/components/Username.astro'
import Password from '@/components/Password.astro'
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
  CardContent,
  CardFooter,
} from '@/components/ui/card'
---

<Layout>
  <div class="flex items-center justify-center h-screen">
    <form
      id="loginForm"
      method="post"
      action="/api/login"
      class="flex flex-col gap-5"
    >
      <Card>
        <CardHeader>
          <CardTitle>Log in</CardTitle>
          <CardDescription>Access your account</CardDescription>
        </CardHeader>
        <CardContent className="flex flex-col gap-5">
          <Username />
          <Password />
          <div id="errorMessage" class="text-sm text-destructive"></div>
        </CardContent>
        <CardFooter className="flex flex-col gap-2">
          <Button className="w-full">Login</Button>
          <div class="text-xs">
            No account? <a class="font-bold hover:underline" href="/signup"
              >Sign up</a
            >
          </div>
        </CardFooter>
      </Card>
    </form>
  </div>
</Layout>

<script type="module">
  const form = document.getElementById('loginForm')
  const errorMessageDiv = document.getElementById('errorMessage')

  form.addEventListener('submit', async (event) => {
    event.preventDefault()
    const formData = new FormData(form)
    console.log('form', form)
    console.log('formData', formData)
    const response = await fetch(form.action, {
      method: 'POST',
      body: formData,
    })

    if (!response.ok) {
      const result = await response.json()
      errorMessageDiv.textContent = result.error // Display error message
    } else {
      window.location.href = '/' // Redirect on success
    }
  })
</script>
